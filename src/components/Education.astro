---
import { siteConfig } from "../config";
---

<section 
  id="education" 
  class="relative isolate overflow-hidden bg-white py-24 md:py-32 min-h-screen flex items-center"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient UNIFORME (stesso di About) -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 1600px 1000px at 0% 50%, ${siteConfig.accentColor}25 0%, ${siteConfig.accentColor}18 25%, ${siteConfig.accentColor}10 50%, rgba(255, 255, 255, 0.2) 80%, white 100%)`}
  ></div>

  <div class="p-8 sm:p-12 md:p-24 max-w-none">
    <div class="flex flex-col md:flex-row md:gap-12 lg:gap-24">
      <!-- Titolo a sinistra -->
      <div class="flex-shrink-0 md:w-48 mb-8 md:mb-0">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold tracking-tight text-gray-800 md:sticky md:top-24">
          Education
        </h2>
      </div>
      
      <!-- Contenuto a destra -->
      <div class="flex-1">
        <!-- Timeline -->
        <div class="space-y-8">
      {siteConfig.education.map((edu, index) => (
        <div 
          key={index}
          class="timeline-card bg-white/60 backdrop-blur-sm border-l-4 border-[var(--accent-color)] rounded-lg p-8 hover:shadow-xl transition-all duration-500"
        >
          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-4 mb-4">
            <div>
              <h3 class="text-2xl font-bold text-gray-800">{edu.degree}</h3>
              <p class="text-lg text-[var(--accent-color)] font-semibold">{edu.school}</p>
            </div>
            <span class="text-sm font-medium text-gray-500 bg-gray-100 px-4 py-2 rounded-full whitespace-nowrap">
              {edu.dateRange}
            </span>
          </div>
          
          <!-- Achievements -->
          {edu.achievements && edu.achievements.length > 0 && edu.achievements !== "..." && (
            <ul class="space-y-2">
              {edu.achievements.map((achievement, achIndex) => (
                <li key={achIndex} class="flex gap-3 text-gray-700">
                  <span class="text-[var(--accent-color)] font-bold">âœ“</span>
                  <span>{achievement}</span>
                </li>
              ))}
            </ul>
          )}
        </div>
      ))}
        </div>
      </div>
    </div>
  </div>
</section>

