---
import { siteConfig } from "../config";
---

<section
  id="contact"
  class="relative isolate overflow-hidden bg-white py-24 md:py-32 min-h-screen flex items-center"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient overlay simile alla hero -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 1600px 1000px at 0% 50%, ${siteConfig.accentColor}25 0%, ${siteConfig.accentColor}18 25%, ${siteConfig.accentColor}10 50%, rgba(255, 255, 255, 0.2) 80%, white 100%)`}
  ></div>

  <div class="w-full max-w-none px-8 sm:px-12 md:px-24">
    <div class="flex flex-col md:flex-row md:gap-6 lg:gap-12 w-full">
      <!-- SINISTRA: Titolo e Dettagli Personali -->
      <div class="flex-1 mb-8 md:mb-0">
        <!-- Titolo -->
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-800 md:sticky md:top-24 mb-12">
          Get in Touch!
        </h2>
        
        <!-- Dati Personali -->
        <div class="flex flex-col justify-center space-y-8">
        <div>
          <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2">
            {siteConfig.name}
          </h3>
          <p class="text-gray-600 text-lg">{siteConfig.title}</p>
        </div>

        <!-- Contatti -->
        <div class="space-y-4">
          <!-- Email -->
          {
            siteConfig.contact?.email && (
              <a
                href={`mailto:${siteConfig.contact.email}`}
                class="flex items-center gap-4 text-gray-700 hover:text-[var(--accent-color)] transition-colors duration-300"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6 flex-shrink-0"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                  <path d="M3 7l9 6l9 -6" />
                </svg>
                <span>{siteConfig.contact.email}</span>
              </a>
            )
          }

          <!-- Telefono -->
          {
            siteConfig.contact?.phone && (
              <div class="flex items-center gap-4 text-gray-700">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6 flex-shrink-0"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M22 16.92v3a2 2 0 0 1 -2.18 2 19.79 19.79 0 0 1 -8.63 -3.07 19.5 19.5 0 0 1 -6 -6 19.79 19.79 0 0 1 -3.07 -8.67a2 2 0 0 1 2 -2.18h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1 -.45 2.11l-1.65 1.65a16 16 0 0 0 6 6l1.65 -1.65a2 2 0 0 1 2.11 -.45 12.84 12.84 0 0 0 2.81 .7 2 2 0 0 1 1.72 2z" />
                </svg>
                <span>{siteConfig.contact.phone}</span>
              </div>
            )
          }
        </div>
      </div>
      </div>

      <!-- DESTRA: Form di Contatto -->
      <div class="flex-1">
        <form
          id="contactForm"
          action={siteConfig.contact?.formEndpoint}
          method="POST"
          class="space-y-6 max-w-lg"
        >
          <!-- Nome -->
          <div>
            <input
              type="text"
              name="name"
              placeholder="Nome"
              required
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:border-[var(--accent-color)] focus:ring-0 transition-colors duration-300"
            />
          </div>

          <!-- Email -->
          <div>
            <input
              type="email"
              name="email"
              placeholder="Email"
              required
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:border-[var(--accent-color)] focus:ring-0 transition-colors duration-300"
            />
          </div>

          <!-- Messaggio -->
          <div>
            <textarea
              name="message"
              placeholder="Messaggio"
              required
              rows="6"
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:border-[var(--accent-color)] focus:ring-0 transition-colors duration-300 resize-none"
            ></textarea>
          </div>

          <!-- Bottone Invia -->
          <button
            type="submit"
            class="w-full px-6 py-3 bg-[var(--accent-color)] text-white font-semibold rounded-lg hover:opacity-90 transition-opacity duration-300"
          >
            Invia
          </button>
        </form>

        <!-- Feedback Success -->
        <div
          id="successMessage"
          class="hidden fixed bottom-8 right-8 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg animate-slide-in"
        >
          âœ“ Inviato con successo!
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes slideIn {
    from {
      transform: translateX(400px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .animate-slide-in {
    animation: slideIn 0.5s ease-out forwards;
  }

  @media (max-width: 768px) {
    section {
      padding: 1.5rem;
    }
  }
</style>

<script>
  const form = document.getElementById("contactForm");
  const successMessage = document.getElementById("successMessage");

  if (form instanceof HTMLFormElement) {
    const successEl = successMessage instanceof HTMLElement ? successMessage : null;

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(form);

      try {
        const action = form.action || form.getAttribute("action") || "";
        const response = await fetch(action, {
          method: "POST",
          body: formData,
          headers: {
            "Accept": "application/json",
          },
        });

        if (response.ok) {
          if (successEl) successEl.classList.remove("hidden");
          form.reset();

          setTimeout(() => {
            if (successEl) successEl.classList.add("hidden");
          }, 3000);
        }
      } catch (error) {
        console.error("Errore:", error);
      }
    });
  }
</script>
