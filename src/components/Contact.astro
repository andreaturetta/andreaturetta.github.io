---
import { siteConfig } from "../config";
---

<section
  id="contact"
  class="relative isolate overflow-hidden bg-white py-24 md:py-32"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient overlay simile alla hero -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 800px 1200px at 100% 100%, ${siteConfig.accentColor}40 0%, ${siteConfig.accentColor}25 20%, ${siteConfig.accentColor}10 40%, rgba(255, 255, 255, 0.3) 70%, rgba(255, 255, 255, 0.8) 90%, white 100%)`}
  ></div>

  <div class="mx-auto max-w-7xl px-6 sm:px-8 lg:px-12">
    <!-- Titolo -->
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 mb-16 text-center">
      Get in Touch
    </h2>

    <!-- Layout due colonne -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-20">
      <!-- SINISTRA: Dettagli Personali -->
      <div class="flex flex-col justify-center space-y-8">
        <div>
          <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2">
            {siteConfig.name}
          </h3>
          <p class="text-gray-600 text-lg">Cyber Security Specialist</p>
        </div>

        <!-- Contatti -->
        <div class="space-y-4">
          <!-- Email -->
          {
            siteConfig.social?.email && (
              <a
                href={`mailto:${siteConfig.social.email}`}
                class="flex items-center gap-4 text-gray-700 hover:text-[var(--accent-color)] transition-colors duration-300"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6 flex-shrink-0"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                  <path d="M3 7l9 6l9 -6" />
                </svg>
                <span>{siteConfig.social.email}</span>
              </a>
            )
          }

          <!-- Telefono -->
          <div class="flex items-center gap-4 text-gray-700">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-6 h-6 flex-shrink-0"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path
                d="M22 16.92v3a2 2 0 0 1 -2.18 2 19.79 19.79 0 0 1 -8.63 -3.07 19.5 19.5 0 0 1 -6 -6 19.79 19.79 0 0 1 -3.07 -8.67a2 2 0 0 1 2 -2.18h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1 -.45 2.11l-1.65 1.65a16 16 0 0 0 6 6l1.65 -1.65a2 2 0 0 1 2.11 -.45 12.84 12.84 0 0 0 2.81 .7 2 2 0 0 1 1.72 2z"
              ></path>
            </svg>
            <span>+39 331 748 8154</span>
          </div>
        </div>

        <!-- Descrizione -->
        <p class="text-gray-600 text-lg font-medium mt-8 pt-8 border-t border-gray-200">
          Contattami!
        </p>
      </div>

      <!-- DESTRA: Form di Contatto -->
      <div>
        <form
          id="contactForm"
          action="https://formspree.io/f/mjggklaa"
          method="POST"
          class="space-y-6"
        >
          <!-- Nome -->
          <div>
            <input
              type="text"
              name="name"
              placeholder="Nome"
              required
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:border-[var(--accent-color)] focus:ring-0 transition-colors duration-300"
            />
          </div>

          <!-- Email -->
          <div>
            <input
              type="email"
              name="email"
              placeholder="Email"
              required
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:border-[var(--accent-color)] focus:ring-0 transition-colors duration-300"
            />
          </div>

          <!-- Messaggio -->
          <div>
            <textarea
              name="message"
              placeholder="Messaggio"
              required
              rows="6"
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg bg-white text-gray-800 placeholder-gray-500 focus:outline-none focus:border-[var(--accent-color)] focus:ring-0 transition-colors duration-300 resize-none"
            ></textarea>
          </div>

          <!-- Bottone Invia -->
          <button
            type="submit"
            class="w-full px-6 py-3 bg-[var(--accent-color)] text-white font-semibold rounded-lg hover:opacity-90 transition-opacity duration-300"
          >
            Invia
          </button>
        </form>

        <!-- Feedback Success -->
        <div
          id="successMessage"
          class="hidden fixed bottom-8 right-8 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg animate-slide-in"
        >
          âœ“ Inviato con successo!
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes slideIn {
    from {
      transform: translateX(400px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .animate-slide-in {
    animation: slideIn 0.5s ease-out forwards;
  }

  /* Responsive per mobile */
  @media (max-width: 768px) {
    section {
      padding: 1.5rem;
    }
  }
</style>

<script>
  const form = document.getElementById("contactForm");
  const successMessage = document.getElementById("successMessage");

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      // Invia il form a Formspree
      const formData = new FormData(form);
      
      try {
        const response = await fetch("https://formspree.io/f/mjggklaa", {
          method: "POST",
          body: formData,
          headers: {
            "Accept": "application/json",
          },
        });

        if (response.ok) {
          // Mostra il messaggio di successo
          successMessage.classList.remove("hidden");

          // Resetta il form
          form.reset();

          // Nascondi il messaggio dopo 3 secondi
          setTimeout(() => {
            successMessage.classList.add("hidden");
          }, 3000);
        }
      } catch (error) {
        console.error("Errore:", error);
      }
    });
  }
</script>
