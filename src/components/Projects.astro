---
import { siteConfig } from "../config";
---

<section 
  id="projects" 
  class="relative isolate overflow-hidden bg-white py-24 md:py-32 min-h-screen flex items-center"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient UNIFORME (stesso di About) -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 1600px 1000px at 0% 50%, ${siteConfig.accentColor}25 0%, ${siteConfig.accentColor}18 25%, ${siteConfig.accentColor}10 50%, rgba(255, 255, 255, 0.2) 80%, white 100%)`}
  ></div>

 <div class="p-8 sm:p-12 md:p-24 max-w-none">
    <div class="flex flex-col md:flex-row md:gap-12 lg:gap-24">
      <!-- Titolo a sinistra -->
      <div class="flex-shrink-0 md:w-48 mb-8 md:mb-0">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold tracking-tight text-gray-800 md:sticky md:top-24">
          Projects
        </h2>
      </div>
      
      <!-- Contenuto a destra -->
      <div class="flex-1">
        <!-- Timeline Verticale -->
        <div class="space-y-8">
      {siteConfig.projects.map((project, index) => (
        <a
          key={index}
          href={project.link}
          target="_blank"
          rel="noopener noreferrer"
          class="project-card bg-white/60 backdrop-blur-sm border-l-4 border-[var(--accent-color)] rounded-lg p-8 hover:shadow-xl transition-all duration-500 block"
        >
          <!-- Content -->
          <div>
            <h3 class="text-2xl font-bold text-gray-800 mb-4 hover:text-[var(--accent-color)] transition-colors duration-300">
              {project.name}
            </h3>
            <p class="text-gray-600 mb-6 leading-relaxed">
              {project.description}
            </p>
            
            <!-- Skills -->
            <div class="flex flex-wrap gap-2">
              {project.skills.map((skill, skillIndex) => (
                <span 
                  key={skillIndex} 
                  class="px-3 py-1 bg-gray-100 text-xs font-medium rounded-full text-gray-700 hover:bg-[var(--accent-color)] hover:text-white transition-colors duration-300"
                >
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </a>
      ))}
        </div>
      </div>
    </div>
  </div>
</section>

