---
import { siteConfig } from "../config";
---

<section id="projects" class="py-24">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-4xl font-bold text-gray-800 mb-16 text-center">
      Projects
    </h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {siteConfig.projects.map((project, index) => (
        <a
          key={index}
          href={project.link}
          target="_blank"
          class="project-card group bg-white border border-gray-200 rounded-2xl p-8 hover:shadow-2xl hover:-translate-y-4 transition-all duration-500 overflow-hidden relative"
        >
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--accent-color)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <h3 class="text-xl font-bold text-gray-800 mb-4 relative z-10 group-hover:text-[var(--accent-color)]">
            {project.name}
          </h3>
          <p class="text-gray-600 mb-6 relative z-10 leading-relaxed">
            {project.description}
          </p>
          
          <div class="flex flex-wrap gap-2 relative z-10">
            {project.skills.map((skill, skillIndex) => (
              <span key={skillIndex} class="px-3 py-1 bg-gray-100 text-xs rounded-full text-gray-700">
                {skill}
              </span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
