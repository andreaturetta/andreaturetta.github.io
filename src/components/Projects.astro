---
import { siteConfig } from "../config";

const projects = siteConfig.projects ?? [];
const hasProjects = projects.length > 0;
---

{hasProjects && (
  <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
      Projects
    </h2>

    <div class="mt-8 space-y-8">
      {projects.map((project, index) => {
        const Component = project.link ? "a" : "div";
        const linkProps = project.link
          ? { href: project.link, target: "_blank", rel: "noopener noreferrer" }
          : {};

        return (
          <Component
            {...linkProps}
            class="block p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl border border-gray-200 hover:bg-white hover:shadow-md transition-all duration-300"
          >
            <span class="text-sm font-mono" style={`color: ${siteConfig.accentColor}`}>
              0{index + 1}
            </span>
            <h3 class="mt-1 text-xl sm:text-2xl font-bold text-gray-900">
              {project.name}
            </h3>
            <p class="mt-2 text-base sm:text-lg text-gray-600 leading-relaxed">
              {project.description}
            </p>

            {project.skills && project.skills.length > 0 && (
              <div class="mt-3 flex flex-wrap gap-1.5 sm:gap-2">
                {project.skills.map((skill) => (
                  <span class="px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-900 text-white rounded-md text-xs sm:text-sm font-medium">
                    {skill}
                  </span>
                ))}
              </div>
            )}
          </Component>
        );
      })}
    </div>
  </section>
)}
