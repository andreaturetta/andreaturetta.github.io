---
import { siteConfig } from "../config";
---

<section 
  id="experience" 
  class="relative isolate overflow-hidden bg-white py-24 md:py-32"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient UNIFORME (stesso di About) -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 800px 1200px at 50% 50%, ${siteConfig.accentColor}40 0%, ${siteConfig.accentColor}25 20%, ${siteConfig.accentColor}10 40%, rgba(255, 255, 255, 0.3) 70%, white 100%)`}
  ></div>

  <div class="p-8 sm:p-12 md:p-24 max-w-4xl ml-auto mr-0">
    <!-- Titolo -->
    <h2 class="text-pretty text-4xl sm:text-5xl font-bold tracking-tight text-gray-800 mb-12">
      Experience
    </h2>
    
    <!-- Timeline -->
    <div class="space-y-8 max-w-3xl">
      {siteConfig.experience.map((exp, index) => (
        <div 
          key={index}
          class="timeline-card bg-white/60 backdrop-blur-sm border-l-4 border-[var(--accent-color)] rounded-lg p-8 hover:shadow-xl transition-all duration-500"
        >
          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-4 mb-4">
            <div>
              <h3 class="text-2xl font-bold text-gray-800">{exp.title}</h3>
              <p class="text-lg text-[var(--accent-color)] font-semibold">{exp.company}</p>
            </div>
            <span class="text-sm font-medium text-gray-500 bg-gray-100 px-4 py-2 rounded-full whitespace-nowrap">
              {exp.dateRange}
            </span>
          </div>
          
          <!-- Bullets -->
          <ul class="space-y-3">
            {exp.bullets.map((bullet, bulletIndex) => (
              <li key={bulletIndex} class="flex gap-3 text-gray-700">
                <span class="text-[var(--accent-color)] font-bold mt-1">â€¢</span>
                <span>{bullet}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>

