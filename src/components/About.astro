---
import { siteConfig } from "../config";
---

<section 
  id="about" 
  class="relative isolate overflow-hidden bg-white py-24 md:py-32"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient UNIFORME -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 800px 1200px at 50% 50%, ${siteConfig.accentColor}40 0%, ${siteConfig.accentColor}25 20%, ${siteConfig.accentColor}10 40%, rgba(255, 255, 255, 0.3) 70%, white 100%)`}
  ></div>

  <div class="h-full mx-auto p-8 sm:p-12 md:p-24 flex items-center">
    <!-- Titolo -->
    <h2 class="text-pretty text-4xl sm:text-5xl font-bold tracking-tight text-gray-800 mb-8">
      About Me
    </h2>
    
    <!-- Descrizione -->
    <p class="text-pretty text-base sm:text-lg md:text-lg/8 font-medium text-gray-600 max-w-3xl mb-16">
      {siteConfig.aboutMe}
    </p>

    <!-- Skill Pills Animate - ALLINEATE A SINISTRA -->
    <div class="flex flex-wrap gap-4">
      {siteConfig.skills.map((skill, index) => (
        <div 
          key={index}
          class="skill-pill group px-6 py-3 bg-white/60 backdrop-blur-sm border-2 border-gray-200 rounded-full text-sm font-semibold text-gray-800 hover:bg-[var(--accent-color)] hover:text-white hover:border-[var(--accent-color)] hover:shadow-xl transition-all duration-500"
        >
          {skill}
        </div>
      ))}
    </div>
  </div>
</section>
