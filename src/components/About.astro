---
import { siteConfig } from "../config";
---

<section 
  id="about" 
  class="relative isolate overflow-hidden bg-white py-24 md:py-32 min-h-screen flex items-center"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient UNIFORME -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 1600px 1000px at 0% 50%, ${siteConfig.accentColor}25 0%, ${siteConfig.accentColor}18 25%, ${siteConfig.accentColor}10 50%, rgba(255, 255, 255, 0.2) 80%, white 100%)`}
  ></div>

  <div class="p-8 sm:p-12 md:p-24 max-w-none">
    <div class="flex flex-col md:flex-row md:gap-12 lg:gap-24">
      <!-- Titolo a sinistra -->
      <div class="flex-shrink-0 md:w-48 mb-8 md:mb-0">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold tracking-tight text-gray-800 md:sticky md:top-24">
          About Me
        </h2>
      </div>
      
      <!-- Contenuto a destra -->
      <div class="flex-1">
        <!-- Descrizione -->
        <p class="text-pretty text-base sm:text-lg md:text-lg/8 font-medium text-gray-600 mb-16">
          {siteConfig.aboutMe}
        </p>

        <!-- Skill Pills Animate -->
        <div class="flex flex-wrap gap-4">
      {siteConfig.skills.map((skill, index) => (
        <div 
          key={index}
          class="skill-pill group px-6 py-3 bg-white/60 backdrop-blur-sm border-2 border-gray-200 rounded-full text-sm font-semibold text-gray-800 hover:bg-[var(--accent-color)] hover:text-white hover:border-[var(--accent-color)] hover:shadow-xl transition-all duration-500"
        >
          {skill}
        </div>
      ))}
        </div>
      </div>
    </div>
  </div>
</section>

