---
// src/components/CVButton.astro
import { siteConfig } from "../config";
---

<a
  href="/cv/cv.pdf"
  download="Andrea_Turetta_CV.pdf"
  class="cv-button"
  style={`--accent-color: ${siteConfig.accentColor}`}
  aria-label="Download CV"
>
  MY CV
</a>

<style>
  .cv-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 28px;
    margin-top: 24px;
    font-weight: 600;
    font-size: 0.95rem;
    letter-spacing: 0.05em;
    text-decoration: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    
    /* Sfondo quasi trasparente */
    background: rgba(29, 78, 216, 0.05);
    
    /* Bordo che risalta */
    border: 1.5px solid rgba(29, 78, 216, 0.6);
    
    /* Testo del colore accent */
    color: var(--accent-color);
    
    /* Shadow leggero */
    box-shadow: 0 4px 12px rgba(29, 78, 216, 0.08),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
    
    /* Effetto luccicante sui bordi */
    overflow: hidden;
  }

  .cv-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    animation: shine 3s infinite;
    pointer-events: none;
    border-radius: 8px;
  }

  @keyframes shine {
    0% {
      left: -100%;
    }
    50% {
      left: 100%;
    }
    100% {
      left: 100%;
    }
  }

  .cv-button:hover {
    /* Al hover: bordo più evidente e sfondo leggermente più visibile */
    background: rgba(29, 78, 216, 0.08);
    border-color: var(--accent-color);
    
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(29, 78, 216, 0.15),
                inset 0 1px 0 rgba(255, 255, 255, 0.4);
  }

  .cv-button:active {
    transform: translateY(0);
    box-shadow: 0 2px 8px rgba(29, 78, 216, 0.08);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .cv-button {
      padding: 10px 20px;
      font-size: 0.9rem;
      margin-top: 20px;
    }
  }
</style>
